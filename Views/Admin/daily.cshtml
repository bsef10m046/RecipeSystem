        <div class="indent">
          <div class="wrapper">
           <article class="col-1">
              <div class="indent-left">
                  <form action="../Recipe/postrecipe"  method="post" enctype="multipart/form-data">
                <table width="100%"><tr><td  style="vertical-align:top; padding-top:25px;">
				<table ><tr>
                    
                    
<b>Upload Image:</b> <input  id="img" type="file" name="image" />
 
     
 
</tr><tr>
					<td><b>@Html.LabelFor(model => model.name)</b></td><td>@Html.EditorFor(model => model.name)</td></tr>
                    
                                        <td><b>Category:</b></td><td>
                                           <select name="categories" id="cat"></select></td></tr>
                    <script>
                        $(document).ready(function () {
                            $.getJSON('../Recipe/getcat',
                             function (data) {
                                 
                                 $.each(data, function (index, val) {
                                     var q = index + 1;
                                     $("#cat").append("<option value=\""+q+"\">" + val + "</option>");
                                    
                                 });
                             });

                        });
</script>    
                    <script>
                        $("#cat").change(function () {
                            var e = $("#cat").val();
                        });
                    </script>
                    <tr><td><b>Ingredients</b></td></tr>
                    <tr><td colspan="2">@Html.TextAreaFor(model => model.ingredients, 20, 25, new { }) <br />@Html.ValidationMessageFor(model => model.ingredients) </td> </tr>
                    
				</table>
		</td>
                       
        <td style="width:70%">
        	<table style="background-color:#FF0;">
            <tr><td>RECIPE</td></tr>
            <tr><td>@Html.TextAreaFor(model => model.recipe, 30, 100, new { }) <br /> </td></tr>
                
            </table>
            
        </td>
<td style="width:70%">
        	<table style="background-color:#FF0;">
            <tr><td>Tip</td></tr>
            <tr><td>@Html.TextAreaFor(model => model.tip, 30, 50, new { }) <br /></td></tr>
               <tr><td>Date</td></tr>
            <tr><td>@Html.TextAreaFor(model => model.Date)</td></tr> 
            </table>
            
        </td>
</tr>
</table>
                 <input type="submit" value="Post" >
                       </form> 
                  </div>
                </div>
              </div>
            
                  
              </div>
            </article>
            
          </div>
        </div>
